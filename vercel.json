{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd backend && npm install",
  "functions": {
    "backend/api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/api/index.js"
    },
    {
      "source": "/socket.io/:path*",
      "destination": "/backend/api/index.js"
    }
  ]
}
