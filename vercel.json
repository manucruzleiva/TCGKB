{
  "git": {
    "deploymentEnabled": {
      "main": true,
      "stage": true
    }
  },
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-sync",
      "schedule": "0 6 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/socket.io/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/((?!api|assets|favicon).*)",
      "destination": "/index.html"
    }
  ]
}
