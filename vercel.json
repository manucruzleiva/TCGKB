{
  "installCommand": "npm install",
  "buildCommand": "npm run build --workspace=frontend",
  "outputDirectory": "frontend/dist",
  "functions": {
    "backend/api/index.js": {
      "memory": 1024,
      "maxDuration": 10,
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/api/index.js"
    },
    {
      "source": "/socket.io/:path*",
      "destination": "/backend/api/index.js"
    }
  ]
}
