{
  "name": "pokemon-tcg-app",
  "version": "1.0.0",
  "description": "Pokemon TCG card search and discussion platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "test": "playwright test --config=.dev/configs/playwright.config.js",
    "test:ui": "playwright test --config=.dev/configs/playwright.config.js --ui",
    "test:headed": "playwright test --config=.dev/configs/playwright.config.js --headed",
    "test:debug": "playwright test --config=.dev/configs/playwright.config.js --debug",
    "test:report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^8.2.2"
  }
}
